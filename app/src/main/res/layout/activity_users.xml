<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UsersActivity">

    <ImageView
        android:id="@+id/pr_main_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/si_rectangle"
        app:tint="#E8E8E8" />

    <ImageView
        android:id="@+id/pr_bg"
        android:layout_width="324dp"
        android:layout_height="688dp"
        android:layout_marginTop="4dp"
        android:scaleY="1.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_bttn_create_group"
        app:srcCompat="@drawable/ng_recbg" />

    <TextView
        android:id="@+id/pr_username"
        android:layout_width="145dp"
        android:layout_height="28dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:text="@string/Usuarios"
        android:textColor="#7165E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pr_return4"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/pr_bttn_create_group"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/hw_bttn_group"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_username"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/pr_return4"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_group_expand_14"
        android:backgroundTint="#00FFFFFF"
        android:foreground="@drawable/ic_group_expand_14"
        android:foregroundTint="#7165E3"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pr_username"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Usuarios"
        android:layout_width="266dp"
        android:layout_height="556dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginBottom="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="@+id/pr_bg"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:text="Personas"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pr_bg"
        app:layout_constraintTop_toTopOf="@+id/pr_bg" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="278dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pr_main_bg"
        app:srcCompat="@drawable/bg_stars" />


</androidx.constraintlayout.widget.ConstraintLayout>