<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NotificationsFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tus logros"
        android:textColor="@color/teal_200"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ng_carta_grupo2" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ms_bg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ng_return9"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_group_expand_14"
        android:backgroundTint="#00FFFFFF"
        android:foreground="@drawable/ic_group_expand_14"
        android:foregroundTint="#7165E3"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textColor="@color/teal_200"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ng_return9"
        app:layout_constraintStart_toEndOf="@+id/ng_return9"
        app:layout_constraintTop_toTopOf="@+id/ng_return9" />

    <ImageView
        android:id="@+id/ng_carta_grupo2"
        android:layout_width="310dp"
        android:layout_height="95dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/card_bg"
        app:tint="#7165E3" />

    <TextView
        android:id="@+id/nombreperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="nombre"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ng_carta_grupo2"
        app:layout_constraintStart_toStartOf="@+id/ng_carta_grupo2"
        app:layout_constraintTop_toTopOf="@+id/ng_carta_grupo2" />

    <TextView
        android:id="@+id/claseperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="clase"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ng_carta_grupo2"
        app:layout_constraintStart_toEndOf="@+id/nombreperfil"
        app:layout_constraintTop_toTopOf="@+id/ng_carta_grupo2" />

    <LinearLayout
        android:id="@+id/logro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/customshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <ImageButton
            android:id="@+id/id1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_users_line_solid"
            android:backgroundTint="#7165E3"
            app:layout_constraintBottom_toBottomOf="@+id/message"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/message"
            app:layout_constraintVertical_bias="0.533"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crear un subgrupo"
            android:textColor="#7165E3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/customshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logro1">


        <ImageButton
            android:id="@+id/id2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_chalkboard_user_solid"
            android:backgroundTint="#7165E3"
            app:layout_constraintBottom_toBottomOf="@+id/message"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/message"
            app:layout_constraintVertical_bias="0.533"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Publicar en tu grupo"
            android:textColor="#7165E3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logro3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/customshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logro2">


        <ImageButton
            android:id="@+id/id3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_book_solid"
            android:backgroundTint="#7165E3"
            app:layout_constraintBottom_toBottomOf="@+id/message"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/message"
            app:layout_constraintVertical_bias="0.533"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/texto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crear una tarea"
            android:textColor="#7165E3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logro4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/customshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logro3">


        <ImageButton
            android:id="@+id/id4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_book_open_solid"
            android:backgroundTint="#7165E3"
            app:layout_constraintBottom_toBottomOf="@+id/message"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/message"
            app:layout_constraintVertical_bias="0.533"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/texto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hacer una tarea"
            android:textColor="#7165E3" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>